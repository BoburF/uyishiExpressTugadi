<div class="container">
 
  <div id="cards">
     <h2 class="total">{{card.price}}</h2>
    <div class="row">
      {{#each card.favorit}}
      <div class="col s12 m3">
        <div class="card">
          <div class="card-image">
            <img src={{img}} />
            <span class="card-title">{{name}}</span>
          </div>
          <div class="card-content">
            <p>{{price}}</p>
            <p>{{count}}</p>
          </div>
          <div class="card-action">
            <button type="submit" class="btn">покупка</button>
            <button id="{{id}}" data-id="{{id}}" class="btn remove-btn">Удалить</button>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>